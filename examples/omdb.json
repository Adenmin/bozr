[
  {
    "name": "XML example. Checking attributes in the response.",
    "calls": [
      {
        "args": {
          "year": 2007
        },
        "on": {
          "url": "http://www.omdbapi.com/",
          "method": "GET",
          "params": {
            "t": "Transformers",
            "r": "xml",
            "y": "{year}"
          }
        },
        "expect": {
          "statusCode": 200,
          "contentType": "text/xml",
          "headers": {
            "CF-Cache-Status": "HIT"
          },
          "body": {
            "root.movie.-year": "2007",
            "root.movie.-director": "Michael Bay"
          },
          "bodySchemaFile": "",
          "bodySchemaURI": ""
        }
      }
    ]
  }
]