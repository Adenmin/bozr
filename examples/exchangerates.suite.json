      {
        "args": {
          "currency": "USD"
        },
        "on": {
          "url": "http://exchangeratesapi.io/api/latest",
          "method": "GET",
          "params": {
            "base": "{currency}"
          },
          "headers": {
            "accept": "application/json"
          }
        },
        "expect": {
          "statusCode": 200,
          "contentType": "application/json",
